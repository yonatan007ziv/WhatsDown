<Application x:Class="WhatsDown.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:WhatsDown.WPF.Converters"
             xmlns:viewModels="clr-namespace:WhatsDown.WPF.MVVM.ViewModels"
             xmlns:views="clr-namespace:WhatsDown.WPF.MVVM.Views">
    <Application.Resources>
        <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />

        <DataTemplate DataType="{x:Type viewModels:MainMenuViewModel}">
            <views:MainMenuView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:LoginViewModel}">
            <views:LoginView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:RegisterViewModel}">
            <views:RegisterView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:ChatScrollerViewModel}">
            <views:ChatScrollerView/>
        </DataTemplate>
        
    </Application.Resources>
</Application>