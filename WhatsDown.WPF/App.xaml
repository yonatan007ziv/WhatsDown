<Application x:Class="WhatsDown.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:WhatsDown.WPF.MVVM.ViewModels"
             xmlns:views="clr-namespace:WhatsDown.WPF.MVVM.Views">
    <Application.Resources>

        <DataTemplate DataType="{x:Type TypeName=viewModels:MainMenuViewModel}">
            <views:MainMenuView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModels:LoginViewModel}">
            <views:LoginView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModels:RegisterViewModel}">
            <views:RegisterView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModels:ChatScrollerViewModel}">
            <views:ChatScrollerView/>
        </DataTemplate>

    </Application.Resources>
</Application>